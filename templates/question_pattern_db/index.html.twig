{% extends "base.html.twig" %}


{% block body %}

    <div class="">
        <div class="element-header col-12">
            <div class="element-header-title">
                <i class="bi bi-tags-fill element-header-icon-small"></i> <span>Question patterns</span>
                <a href="{{ app.request.uri }}/add-question-pattern"><button class="element-header-add-button btn btn-primary"> Add </button></a>
            </div>
        </div>

