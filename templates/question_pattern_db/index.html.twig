                        {{ pattern.text }}
                    </div>
                    <div class="col">
                        {{ pattern.category.name }}
                    </div>
                    <div class="col" style="overflow-wrap: anywhere;">
                        {{ pattern.url }}
                    </div>
                    <div class="col">
                        {{ pattern.code }}
                        <a href="{{ app.request.uri }}/edit-question-pattern/{{ pattern.id }}"><button class="btn btn-warning"> Edit </button></a>
